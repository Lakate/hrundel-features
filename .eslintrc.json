{
  "parserOptions": {
    "ecmaVersion": 5,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "extends": ["xo"],
  "rules": {
    "indent": [2, 4, {"SwitchCase": 1}],
    "max-len": [2, 100],
    "max-params": [2, 3],
    "no-lonely-if": 0,
    "new-cap": 0,
    "no-unused-vars": 0,
    "guard-for-in": 0,
    "no-else-return": 0,
    "no-case-declarations": 0,
    "no-useless-constructor": 0
  }
}
